<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ApplicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/parentPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parentsremovebg"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="Parent's Name"
                    android:textColor="@color/pinkAccent"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SpouseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Spouse Name"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintLeft_toLeftOf="@+id/name"/>

                <TextView
                    android:id="@+id/childname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Child Name"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto"
                    app:layout_constraintTop_toBottomOf="@id/SpouseName"
                    app:layout_constraintLeft_toLeftOf="@+id/SpouseName"/>

                <TextView
                    android:id="@+id/approve"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Approve"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/green"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto"
                    app:layout_constraintTop_toBottomOf="@id/childname"
                    app:layout_constraintLeft_toLeftOf="@+id/childname"/>

                <TextView
                    android:id="@+id/reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginTop="4dp"
                    android:text="Reject"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textSize="15sp"
                    android:layout_marginLeft="105dp"
                    app:layout_constraintLeft_toRightOf="@id/approve"
                    app:layout_constraintTop_toBottomOf="@id/childname"
                    app:layout_constraintRight_toRightOf="@+id/childname"/>





            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/parentPhoto2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parentsremovebg"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="Parent's Name"
                    android:textColor="@color/pinkAccent"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto2"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SpouseName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Spouse Name"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto2"
                    app:layout_constraintTop_toBottomOf="@id/name2"
                    app:layout_constraintLeft_toLeftOf="@+id/name2"/>

                <TextView
                    android:id="@+id/childname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=" Child Name"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto2"
                    app:layout_constraintTop_toBottomOf="@id/SpouseName2"
                    app:layout_constraintLeft_toLeftOf="@+id/SpouseName2"/>

                <TextView
                    android:id="@+id/approve2"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Approve"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/green"
                    app:layout_constraintLeft_toRightOf="@id/parentPhoto2"
                    app:layout_constraintTop_toBottomOf="@id/childname2"
                    app:layout_constraintLeft_toLeftOf="@+id/childname2"/>

                <TextView
                    android:id="@+id/reject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginTop="4dp"
                    android:text="Reject"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textSize="15sp"
                    android:layout_marginStart="105dp"
                    app:layout_constraintLeft_toRightOf="@id/approve2"
                    app:layout_constraintTop_toBottomOf="@id/childname2"
                    app:layout_constraintRight_toRightOf="@+id/childname2"/>





            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>




</ScrollView>