<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.offlineMeetFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Give them a chance to charm you !"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintLeft_toLeftOf="@+id/appointment"
        app:layout_constraintRight_toRightOf="@+id/appointment"
        app:layout_constraintTop_toBottomOf="@+id/appointment" />

    <ImageView
        android:id="@+id/offlineMeetIcon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/offlinemeet"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book An Appointment"
        android:padding="10dp"
        android:textStyle="italic"
        android:textSize="28sp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/greenbuttongradient"
        app:layout_constraintTop_toBottomOf="@+id/offlineMeetIcon"
        app:layout_constraintLeft_toLeftOf="@+id/offlineMeetIcon"
        app:layout_constraintRight_toRightOf="@+id/offlineMeetIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>